<Window x:Class="RedeSocial.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recuperação de Senha" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Texto de instrução -->
        <TextBlock Text="Digite seu e-mail para recuperação de senha:" FontSize="14" VerticalAlignment="Top" Margin="10,10,0,0"/>

        <!-- TextBox para inserir o e-mail -->
        <TextBox Name="txtEmail" 
                 Width="300" 
                 Height="30" 
                 VerticalAlignment="Top" 
                 Margin="10,40,0,0"/>

        <!-- Botão para enviar o e-mail -->
        <Button Content="Enviar" 
                HorizontalAlignment="Left" 
                Height="30" 
                Margin="140,90,0,0" 
                Width="100" 
                VerticalAlignment="Top" 
                Click="EnviarEmail_Click" Grid.RowSpan="2"/>
    </Grid>
</Window>
