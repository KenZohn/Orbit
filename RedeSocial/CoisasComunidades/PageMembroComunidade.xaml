<Page x:Class="RedeSocial.CoisasComunidades.PageMembroComunidade"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RedeSocial.CoisasComunidades"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="240" 
      Title="PageMembroComunidade">
    <Grid>
        <Border Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Ellipse x:Name="fotoMembro" Grid.Column="0" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"   Fill="Black" MouseDown="fotoMembro_MouseDown"/>
                <Label x:Name="labelNomeMembro" Grid.Column="1" Content="Nome do membro"  VerticalAlignment="Center" FontSize="16" FontFamily="{StaticResource ArimoFont}" FontWeight="Bold" />
            </Grid>
        </Border>
    </Grid>
</Page>
