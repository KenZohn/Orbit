<Page x:Class="RedeSocial.PageCriarComunidade"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RedeSocial"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="300"
      Title="PageCriarComunidade">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Criar Nova Comunidade" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Ellipse x:Name="imgComunidade" Height="100" Stroke="Black" Width="100" StrokeThickness="2" Fill="Transparent"/>
            <Button Content="Adicionar Imagem" Click="AdicionarImagem_Click" Width="120" Height="30" Margin="0,10,0,10"/>

            <TextBox x:Name="txtNomeComunidade" Text="Nome da Comunidade" Margin="0,0,0,10"/>
            <TextBox x:Name="txtDescricao" Text="Descrição" Margin="0,0,0,10"/>

            <Button Content="Criar Comunidade" Margin="0,0,0,10" Click="CriarComunidade_Click"/>

            <Button Content="Fechar" Click="Fechar_Click" Background="Red" Foreground="White" />
            
        </StackPanel>
    </Grid>
</Page>
